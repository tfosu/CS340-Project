<h1>Games</h1>

<table class="table table-bordered">
  <thead><tr>
    <th>Game ID</th>
    <th>Date</th>
    <th>Home Team</th>
    <th>Away Team</th>
  </tr></thead>
  <tbody>
  {{#each games}}
    <tr><td>{{gameID}}</td><td>{{date}}</td><td>{{homeTeam}}</td><td>{{awayTeam}}</td></tr>
  {{/each}}
  </tbody>
</table>

<h2>Add Game</h2>
<form method="POST" action="/games/add">
  <div class="mb-2">
    <label class="form-label">Date</label>
    <input name="date" type="date" class="form-control">
  </div>
  <div class="mb-2">
    <label class="form-label">Home Team</label>
    <input name="homeTeam" type="text" class="form-control">
  </div>
  <div class="mb-2">
    <label class="form-label">Away Team</label>
    <input name="awayTeam" type="text" class="form-control">
  </div>
  <button class="btn btn-primary">Submit</button>
</form>

<h2 class="mt-4">Update Game</h2>
<form method="POST" action="/games/update">
  <div class="row g-2">
    <div class="col">
      <label class="form-label">Game</label>
      <select name="gameID" class="form-control" required>
        <option value="">-- Select Game --</option>
        {{#each games}}
          <option value="{{gameID}}">{{homeTeam}} vs {{awayTeam}} ({{date}})</option>
        {{/each}}
      </select>
    </div>
    <div class="col">
      <label class="form-label">New Date</label>
      <input name="date" type="date" class="form-control" required>
    </div>
    <div class="col-auto">
      <button type="submit" class="btn btn-warning">Update</button>
    </div>
  </div>
</form>

<h2 class="mt-4">Delete Game</h2>
<form method="POST" action="/games/delete">
  <div class="row g-2">
    <div class="col">
      <label class="form-label">Game</label>
      <select name="gameID" class="form-control" required>
        <option value="">-- Select Game --</option>
        {{#each games}}
          <option value="{{gameID}}">{{homeTeam}} vs {{awayTeam}} ({{date}})</option>
        {{/each}}
      </select>
    </div>
    <div class="col-auto">
      <button type="submit" class="btn btn-danger">Delete</button>
    </div>
  </div>
</form>

<h1>Players</h1>

<table class="table table-bordered">
  <thead><tr><th>playerID</th><th>name</th><th>points</th><th>threes</th><th>assists</th><th>blocks</th><th>steals</th><th>fgm</th><th>fga</th><th>ftm</th><th>fta</th><th>rebounds</th><th>turnovers</th><th>gamesPlayed</th><th>nbaTeam</th><th>position</th></tr></thead>
  <tbody>
  {{#each players}}
    <tr><td>{{playerID}}</td><td>{{name}}</td><td>{{points}}</td><td>{{threes}}</td><td>{{assists}}</td><td>{{blocks}}</td><td>{{steals}}</td><td>{{fgm}}</td><td>{{fga}}</td><td>{{ftm}}</td><td>{{fta}}</td><td>{{rebounds}}</td><td>{{turnovers}}</td><td>{{gamesPlayed}}</td><td>{{nbaTeam}}</td><td>{{position}}</td></tr>
  {{/each}}
  </tbody>
</table>

<h2>Add Players</h2>
<form method="POST" action="/players/add">
  <div class="mb-2">
    <label class="form-label">name</label>
    <input name="name" type="text" class="form-control">
  </div>
  <div class="mb-2">
    <label class="form-label">points</label>
    <input name="points" type="text" class="form-control">
  </div>
  <div class="mb-2">
    <label class="form-label">threes</label>
    <input name="threes" type="text" class="form-control">
  </div>
  <div class="mb-2">
    <label class="form-label">assists</label>
    <input name="assists" type="text" class="form-control">
  </div>
  <div class="mb-2">
    <label class="form-label">blocks</label>
    <input name="blocks" type="text" class="form-control">
  </div>
  <div class="mb-2">
    <label class="form-label">steals</label>
    <input name="steals" type="text" class="form-control">
  </div>
  <div class="mb-2">
    <label class="form-label">fgm</label>
    <input name="fgm" type="text" class="form-control">
  </div>
  <div class="mb-2">
    <label class="form-label">fga</label>
    <input name="fga" type="text" class="form-control">
  </div>
  <div class="mb-2">
    <label class="form-label">ftm</label>
    <input name="ftm" type="text" class="form-control">
  </div>
  <div class="mb-2">
    <label class="form-label">fta</label>
    <input name="fta" type="text" class="form-control">
  </div>
  <div class="mb-2">
    <label class="form-label">rebounds</label>
    <input name="rebounds" type="text" class="form-control">
  </div>
  <div class="mb-2">
    <label class="form-label">turnovers</label>
    <input name="turnovers" type="text" class="form-control">
  </div>
  <div class="mb-2">
    <label class="form-label">gamesPlayed</label>
    <input name="gamesPlayed" type="text" class="form-control">
  </div>
  <div class="mb-2">
    <label class="form-label">nbaTeam</label>
    <input name="nbaTeam" type="text" class="form-control">
  </div>
  <div class="mb-2">
    <label class="form-label">position</label>
    <input name="position" type="text" class="form-control">
  </div>
  <button class="btn btn-primary">Submit</button>
</form>

<h2 class="mt-4">Update players</h2>
<form method="POST" action="/players/update">
  <div class="row g-2">
    <div class="col"><input name="playerID" placeholder="playerID" class="form-control"></div>
    <div class="col"><input name="name" placeholder="name" class="form-control"></div>
    <div class="col"><button class="btn btn-warning">Update</button></div>
  </div>
</form>

<h2 class="mt-4">Delete players</h2>
<form method="POST" action="/players/delete">
  <div class="row g-2">
    <div class="col"><input name="playerID" placeholder="playerID" class="form-control"></div>
    <div class="col"><button class="btn btn-danger">Delete</button></div>
  </div>
</form>
